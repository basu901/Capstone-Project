<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_image_menu"
        android:tint="#757575"
        android:contentDescription="@string/image_holder" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/nav_text_edit_menu"
        android:textColor="@android:color/black"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_text_label_menu"
        android:layout_marginStart="56dp"
        android:layout_toEndOf="@id/nav_image_menu"
        android:layout_toStartOf="@id/nav_text_edit_menu"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>